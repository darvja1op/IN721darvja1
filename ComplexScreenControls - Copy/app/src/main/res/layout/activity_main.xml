<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="bit.darvja1.MusicSchool.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Enrol for Music Lessons"
        android:id="@+id/txtBanner"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textColor="@color/colorText"
        android:textSize="30sp" />

    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/rdoGroup"
        android:layout_below="@+id/txtInstrument"
        android:layout_alignLeft="@+id/txtInstrument"
        android:textColor="@color/colorText"
        android:layout_alignStart="@+id/txtInstrument">

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorText"
            android:text="Accordian"
            android:id="@+id/rdoAccordian"
            android:layout_gravity="left"
            android:textSize="25sp" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorText"
            android:text="Bassoon"
            android:id="@+id/rdoBassoon"
            android:layout_gravity="left"
            android:textSize="25sp" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorText"
            android:text="Cello"
            android:id="@+id/rdoCello"
            android:layout_gravity="left"
            android:textSize="25sp" />
    </RadioGroup>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/txtMessage"
        android:textColor="@color/colorText"
        android:layout_alignParentBottom="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Go!"
        android:id="@+id/btnGo"
        android:layout_below="@+id/spnMonth"
        android:layout_alignLeft="@+id/spnMonth"
        android:textColor="@color/colorText"
        android:layout_alignStart="@+id/spnMonth" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Choose your instrument"
        android:id="@+id/txtInstrument"
        android:layout_below="@+id/txtBanner"
        android:textColor="@color/colorText"
        android:layout_alignLeft="@+id/txtBanner"
        android:layout_alignStart="@+id/txtBanner"
        android:layout_marginTop="29dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="When do you want to start?"
        android:id="@+id/txtStart"
        android:textColor="@color/colorText"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/rdoGroup"
        android:layout_alignStart="@+id/rdoGroup" />

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/spnMonth"
        android:textColor="@color/colorText"
        android:layout_below="@+id/txtStart"
        android:layout_alignLeft="@+id/txtStart"
        android:layout_alignStart="@+id/txtStart"
        android:layout_marginTop="31dp" />
</RelativeLayout>
